@page "/podreczniki"

@inject IBookRepository BookRepository
@inject IJSRuntime JS

@rendermode InteractiveServer

<CatalogNavbar />

<div class="w-100">
    <div class="mx-auto px-3 catalog-width">
        <!--Menu główne i searchbar-->
        <CatalogSearchBar />

        @if (IsLoading)
        {
            <div class="position-absolute w-75  h-75 d-flex flex-column align-items-center bg-white justify-content-center">
                <img src="/images/loading-book.gif" alt="loading" />
                <p>Ładowanie...</p>
            </div>
        }

        else
        {
            <div class="card shadow border-0 m-4 ">
                <div class="card-header bg-theme bg-gradient ml-0 py-3">
                    <div class="row">
                        <div class="col-12 text-center">
                    <h2 class="h2-custom">Lista lektur</h2>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row pb-3">
                    </div>

                    @if (Books.Any())
                    {
                       
                        int index = 1;

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover table-sm text-nowrap">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th></th>
                                        <th>Klasa</th>
                                        <th>Przedmiot</th>
                                        <th>Tytuł</th>
                                        <th>Autor</th>
                                        <th>Wydawca</th>
                                        <th>Rok wydania</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var book in Books)
                                    {
                                        <tr>
                                           
                                            <td>@index</td>
                                            
                                            <td>
                                                <a href="/lektury/view/@book.Id" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-info-square"></i>
                                                </a>
                                            </td>
                                            <td>@book.Class</td>
                                            <td>@book.Subject</td>
                                            <td>@book.Title</td>
                                            <td>@book.BookAuthor</td>
                                            <td>@book.BookPublisher</td>
                                            <td>@book.Year</td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                
                </div>
            </div>
        }
    </div>
</div>

<CatalogFooter />

@code {
    private bool IsLoading { get; set; } = true;
    private IEnumerable<BookGetDto> Books { get; set; } = new List<BookGetDto>();

    protected override async Task OnInitializedAsync()
    {
        await LoadBooks();
        IsLoading = false;
    }

    private async Task LoadBooks()
    {
        Books = await BookRepository.GetPodrecznikiAsync();
    }
}