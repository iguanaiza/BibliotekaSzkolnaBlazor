        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="/system/czytelnicy">
                <span class="bi bi-people" aria-hidden="true"></span> Czytelnicy
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="/system/kosz" Match="NavLinkMatch.All">
                <span class="bi bi-trash3" aria-hidden="true"></span> Kosz
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

