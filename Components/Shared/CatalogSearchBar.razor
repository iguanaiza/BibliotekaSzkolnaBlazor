@inject NavigationManager Navigation

<div class="card shadow mb-4 mt-4 border-1">
    <div class="d-flex justify-content-center">
        <div class="card-body p-4" style="max-width: 800px; width: 100%;">
            <div class="d-flex flex-wrap justify-content-center p-4 gap-3">
                <a class="btn btn-lg btn-primary" aria-current="Strona główna" href="/">Home</a>
                <a class="btn btn-lg btn-primary" href="/catalog">Katalog</a>
                <a class="btn btn-lg btn-primary" href="/lektury">Lektury</a>
                <a class="btn btn-lg btn-primary" href="#">Podręczniki</a>
                <a class="btn btn-lg btn-primary" href="#">Polecane</a>
            </div>

            <div class="d-flex align-items-center">
                <!-- Logo -->
                <img class="books-icon me-4" alt="Symbol katalogu" src="/images/book-open-solid.svg" width="96">

                <!-- Tytuł i wyszukiwarka -->
                <form class="flex-grow-1" @onsubmit="OnFormSubmit">
                    <h1 class="mb-3 theme-font-col-pri">Katalog Online</h1>
                    <div class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                               @bind="SearchTerm">
                        <button class="btn btn-lg btn-primary" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public EventCallback<string> OnSearchChanged { get; set; }

    private string SearchTerm { get; set; } = "";

    private async Task OnFormSubmit()
    {
        await OnSearchChanged.InvokeAsync(SearchTerm);
        var encodedTerm = Uri.EscapeDataString(SearchTerm);
        Navigation.NavigateTo($"/search/?term={encodedTerm}");
    }
}

